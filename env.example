# =============================================================================
# CONFIGURACIÓN DE LA APLICACIÓN DE SÍNTESIS DE VOZ
# =============================================================================
# Copia este archivo como .env y configura las variables según tu entorno

# =============================================================================
# CONFIGURACIÓN ELEVENLABS
# =============================================================================
# Obtén tu API key en: https://elevenlabs.io/
ELEVENLABS_API_KEY=tu_api_key_aqui

# Voice ID por defecto (Sarah - compatible con español)
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL

# Modelo de ElevenLabs a usar
ELEVENLABS_MODEL_ID=eleven_multilingual_v2

# Formato de salida de audio
ELEVENLABS_OUTPUT_FORMAT=mp3_44100_128

# Configuración de voz (0.0 - 1.0)
ELEVENLABS_STABILITY=0.5
ELEVENLABS_SIMILARITY_BOOST=0.75

# Configuración de API
ELEVENLABS_TIMEOUT=30
ELEVENLABS_MAX_RETRIES=3

# =============================================================================
# CONFIGURACIÓN COQUI TTS
# =============================================================================
# Modelo por defecto para TTS en español
COQUI_DEFAULT_MODEL=tts_models/es/mai/tacotron2-DDC

# Modelo para clonación de voz
COQUI_VOICE_CLONING_MODEL=tts_models/multilingual/multi-dataset/your_tts

# Frecuencia de muestreo
COQUI_SAMPLE_RATE=22050

# Directorio de cache para modelos
COQUI_CACHE_DIR=models_cache

# Usar GPU si está disponible (true/false)
COQUI_USE_GPU=false

# Precargar modelos al inicio (true/false)
COQUI_MODELS_PRELOAD=true

# =============================================================================
# CONFIGURACIÓN WEB (FLASK)
# =============================================================================
# Host y puerto
FLASK_HOST=0.0.0.0
FLASK_PORT=8080

# Modo debug (solo para desarrollo)
FLASK_DEBUG=false

# Clave secreta (CAMBIA ESTO EN PRODUCCIÓN)
FLASK_SECRET_KEY=tu_clave_secreta_super_segura_aqui

# Tamaño máximo de archivos (en bytes)
MAX_CONTENT_LENGTH=16777216

# Carpeta de uploads
UPLOAD_FOLDER=static/uploads

# Timeout de sesión (en segundos)
SESSION_TIMEOUT=3600

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================
# Límite de requests por minuto
RATE_LIMIT_PER_MINUTE=60

# Longitud máxima de texto
MAX_TEXT_LENGTH=1000

# Duración máxima de audio (en segundos)
MAX_AUDIO_DURATION=300

# Orígenes permitidos para CORS (separados por comas)
ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Habilitar CORS (true/false)
ENABLE_CORS=true

# Protección CSRF (true/false)
CSRF_PROTECTION=true

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================
# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Directorio de logs
LOG_DIR=logs

# Tamaño máximo de archivo de log (en bytes)
MAX_LOG_SIZE=10485760

# Número de archivos de backup
LOG_BACKUP_COUNT=5

# Habilitar métricas (true/false)
ENABLE_METRICS=true

# Días de retención de métricas
METRICS_RETENTION_DAYS=30

# =============================================================================
# CONFIGURACIÓN DE RENDIMIENTO
# =============================================================================
# Procesamiento asíncrono (true/false)
ASYNC_PROCESSING=true

# Máximo de requests concurrentes
MAX_CONCURRENT_REQUESTS=10

# Timeout de requests (en segundos)
REQUEST_TIMEOUT=120

# Habilitar cache (true/false)
CACHE_ENABLED=true

# TTL del cache (en segundos)
CACHE_TTL=3600

# Precargar modelos al inicio (true/false)
PRELOAD_MODELS=false

# =============================================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =============================================================================
# Nombre de la aplicación
APP_NAME=Voice Synthesis Demo

# Versión de la aplicación
APP_VERSION=1.0.0

# Entorno (development, staging, production)
ENVIRONMENT=development

# Zona horaria
TIMEZONE=UTC

# =============================================================================
# CONFIGURACIONES OPCIONALES PARA DESARROLLO
# =============================================================================
# Habilitar modo verbose
VERBOSE=false

# Habilitar profiling
ENABLE_PROFILING=false

# Guardar archivos temporales (true/false)
KEEP_TEMP_FILES=false

# =============================================================================
# CONFIGURACIONES DE BASE DE DATOS (FUTURO)
# =============================================================================
# Para futuras funcionalidades con base de datos
